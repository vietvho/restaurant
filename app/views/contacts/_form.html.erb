<div id="contact_message">
  <%= form_with(model: contact, data: {"div": "contact_message"}) do |form| %>
    <% if contact.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

        <ul>
          <% contact.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <% form.label :name %>
      <%= form.text_field :name, {class: "c-form__control",placeholder: "Name"} %>
    </div>

    <div class="field">
      <% form.label :email %>
      <%= form.text_field :email,  {class: "c-form__control",placeholder: "Email"}%>
    </div>

    <div class="field">
      <% form.label :message %>
      <%= form.text_area :message,  {class: "c-form__control u-mb--30",placeholder: "Message",rows: "6"} %>
    </div>

    <div class="actions">
      <button type="submit" class="c-btn--secondary c-btn o-align--right">
        Submit
      </button>
    </div>
  <% end %>
</div>
